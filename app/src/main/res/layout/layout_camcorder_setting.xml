<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_camcorder_setting">
    <ToggleButton
        style="@style/CamcorderSettingButton"
        android:id="@+id/tbtn_camcorder_setting_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/selector_ic_grid"
        android:textOn="@string/grid"
        android:textOff="@string/grid"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/divider_color"/>
    <ToggleButton
        style="@style/CamcorderSettingButton"
        android:id="@+id/tbtn_camcorder_setting_flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/selector_ic_flash"
        android:textOn="@string/flash"
        android:textOff="@string/flash"/>
</LinearLayout>